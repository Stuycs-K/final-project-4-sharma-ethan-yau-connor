public class Menu {
  public Menu(String name) {
    Menu(name, 10);
  }
  
  public Menu(String name, int fontSize) {
    this.name = name;
    this.fontSize = fontSize;
    this.font = createFont("Monospaced", fontSize);
    this.text = new ArrayList<String>();
    this.curLine = 0;
    this.strAscent = textAscent();
  }
}
